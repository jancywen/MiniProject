/* pages/goods/add/add.wxss */
page {
  background-color: #f2f2f2;
}

.selection-cell {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
  font-size: 28rpx;
}

.match {
  height: 80rpx;
  margin: 20rpx 40rpx;
  border-radius: 16rpx;
  border: 2rpx solid #0079ff;
  background-color: #bdc8eb;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.general_name {
  height: 120rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #fff;
  font-size: 28rpx;
}

.add_image {
  background-color: #fff;
  padding: 0rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 20rpx;
}

.add_image_content {
  display: flex;
  flex-wrap: wrap;
}

.add_image_item {
  width: 25%;
  margin: 20rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add_image_text {
  font-size: 28rpx;
  color: #9b9b9b;
  padding: 10rpx 0rpx;
}
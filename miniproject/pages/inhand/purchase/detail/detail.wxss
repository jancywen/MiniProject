/* pages/inhand/purchase/detail/detail.wxss */
page {
  background: #f7f7f7;
}

.state {
  height: 88rpx;
  color: #017BFE;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.reason {
  font-size: 28rpx;
  background-color:#fff;
  height: 88rpx; 
  display: flex;
  align-items: center;
  padding: 0rpx 30rpx;
  border-top: 2rpx solid #f2f2f2;
}

.section {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.section-header {
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4a4a4a;
}

.section-footer {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #4a4a4a;
}

.cell {
  height: 160rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.cell-content {
  height: 100%;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cell-content-title {
  width: 400rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.title-right-top {
  position: absolute;
  top: -40rpx;
  right: 10rpx;
  color: #4a4a4a;
  text-align: right;
}

.cold-chin-cell {
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4a4a4a
}

.btns-content {
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 32rpx;
  padding-right: 32rpx
}

.btn-refuse {
  height: 80rpx;
  width: 50%;
  border: 2rpx solid #6797FA;
  color: #6797FA;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-pass {
  height: 80rpx;
  width: 50%;
  border-radius: 40rpx;
  background-color: #6797FA;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}